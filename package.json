{
  "name": "@goodmanlabs/react-swipe-row",
  "version": "0.1.1",
  "author": "Glenn Goodman",
  "description": "A native-feeling horizontal scroll-snap card rail for React",
  "license": "MIT",
  "private": false,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gpgoodman/react-swipe-row.git"
  },
  "homepage": "https://github.com/gpgoodman/react-swipe-row#readme",
  "bugs": {
    "url": "https://github.com/gpgoodman/react-swipe-row/issues"
  },
  "keywords": [
    "react",
    "react-component",
    "horizontal-scroll",
    "scroll-snap",
    "carousel",
    "card-rail",
    "swipe",
    "gesture",
    "touch",
    "momentum-scroll",
    "ui",
    "frontend",
    "scrollable",
    "horizontal",
    "card-carousel"
  ],
  "sideEffects": [
    "dist/style.css"
  ],
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/react": "^19.2.8",
    "happy-dom": "^20.1.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "scripts": {
    "prepublishOnly": "npm run test && npm run build",
    "build": "tsup && cp src/style.css dist/style.css",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest"
  }
}
